@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
<div>
    <div>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Create new Medicine</button>
        <button class="btn btn-warning">Sort by inventory quantity</button>
        <button class="btn btn-warning">Sort by expiration date</button>
        <form style="float:right;">
            <div class="input-group rounded">
                <input type="search" class="form-control rounded" placeholder="Search"/>
                <button class="input-group-text border-0">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Medicine Name</th>
                <th scope="col">Price</th>
                <th scope="col">Expiration</th>
                <th scope="col">Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>mdo</td>
                <td>
                    <a href="#editEmployeeModal" class="edit" data-toggle="modal" style="text-decoration:none; color:orange;">|<i class="fa-solid fa-pen-to-square"></i>|</a>
                    <a href="#deleteEmployeeModal" class="delete" data-toggle="modal" style="text-decoration:none; color:red;">|<i class="fa-solid fa-trash"></i>|</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>