<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Boostrap Css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Boostrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!-- Boostrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <!-- Font Awsome -->
    <script src="https://kit.fontawesome.com/d9a92be812.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Main css -->
    <link rel="stylesheet" href="./css/dashboard.css">
    <title>Admin Page</title>
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <a href=""><img src="./img/VTP2 1.svg" alt="Logo" width="100%"></a>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a asp-action="Index" asp-controller="DoctorPage" class="active"><i class="fa-solid fa-gauge"></i><span>Dashboard</span></a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="MedicalExam"><i class="fa-solid fa-stethoscope"></i><span>Medical Exam</span></a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Appointment"><i class="fa-solid fa-calendar-check"></i><span>Appointment</span></a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="ReceivePatient"><i class="fa-solid fa-hand-holding-medical"></i><span>Recieve Patient</span></a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Medicine"><i class="fa-solid fa-capsules"></i><span>Medicine Manage</span></a>
                </li>
                <li>
                    <a href=""><i class="fa-solid fa-bed-pulse"></i><span>Patient Manage</span></a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span><i class="fa-solid fa-bars"></i></span>
                </label>
            </h2>
            <div class="user-wrapper">
                <img src="./img/user.png" width="40px" height="40px" onclick="toggleMenu()">
                <div onclick="toggleMenu()">
                    <h5>Thanh Phong Vo</h5>
                    <small>Doctor</small>
                </div>
                <div class="sub-menu-wrap" id="subMenu">
                    <div class="sub-menu">
                        <div class="user-info">
                            <img src="./img/user.png" width="20px" height="20px">
                            <p>Thanh Phong Vo<p>
                        </div>
                        <hr>
                        <a href="" class="sub-menu-link">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <p>Logout</p>
                            <span>></span>
                        </a>
                    </div>
                </div>
            </div>
        </header>
        <main>
            @RenderBody()
            @RenderSection("Scripts",false)
        </main>
    </div>

    <script>
        let subMenu = document.getElementById("subMenu");
        function toggleMenu() {
            subMenu.classList.toggle("open-menu");
        }
    </script>
</body>
</html>